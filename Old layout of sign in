            <p class="signin-subtitle" id="step-subtitle">Use your Google Account</p>
            
            <div class="step-indicator" id="step-indicator">Step 1 of 2</div>
            
            <!-- Email Step -->
            <div id="email-step">
                <div class="form-group">
